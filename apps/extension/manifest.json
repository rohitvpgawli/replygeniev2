{
  "manifest_version": 3,
  "name": "ReplyGenie",
  "version": "1.0.0",
  "description": "AI-powered review reply assistant for Google Business Profile",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://business.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://business.google.com/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["icons/*"],
      "matches": ["https://business.google.com/*"]
    }
  ]
}
